<%- include('shared/header', {title: title}); %>
<div class="hero-body">
  <div class="container has-text-centered">
    <div class="columns is-8 is-variable">
      <div class="column is-two-thirds has-text-left">
        <div class="card">
          <div class="card-image">
            <figure
              class="image is-4by3"
              style="
                background-image: url('/images/logo.png');
                background-size: cover;
              "
            ></figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4">Subscripción a Platzi Store</p>
                <p class="subtitle is-6">$ [Precio de la Subscripción]</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="column is-one-third has-text-left">
        <div class="field">
          <label class="label">Subscribete:</label>
          <div class="control">
            <div id="paypal-button-container"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  paypal
    .Buttons({
      createSubscription: function (data, actions) {
        return actions.subscription.create({
          plan_id: "P-1MG323994L886250JMM2FWTI", // Creates the subscription
        });
      },
      onApprove: function (data, actions) {
        alert(
          "You have successfully created subscription " + data.subscriptionID
        ); // Optional message given to subscriber
      },
    })
    .render("#paypal-button-container"); // Renders the PayPal button
</script>
<%- include('shared/footer'); %>
